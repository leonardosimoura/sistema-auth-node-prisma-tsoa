{
    "entryFile": "src/app.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "src/**/*controller.ts"
    ],
    "spec": {
        "securityDefinitions": {
            "api_key": {
                "type": "jwt",
                "name": "authorization",
                "in": "header"
            }
        },
        "outputDirectory": "./dist",
        "specVersion": 3
    },
    "routes": {
        "authenticationModule": "./src/authentication.ts",
        "routesDir": "./src/routes"
    }
}